<h1>Listing Users</h1>
<h2><%= current_date() %></h2>
<h3><%= count_users(@users) %></h3>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Born date</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for user <- @users do %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.born_date %></td>

      <td>
        <%= link "Show", to: Routes.user_path(@conn, :show, user) %>
        <%= link "Edit", to: Routes.user_path(@conn, :edit, user) %>
        <%= link "Delete", to: Routes.user_path(@conn, :delete, user), method: :delete, data: [confirm: "Are you sure?"] %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New User", to: Routes.user_path(@conn, :new) %></span>
